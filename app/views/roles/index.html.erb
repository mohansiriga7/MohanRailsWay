<h1>Listing Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.description %></td>
        <td><%= link_to 'Show', role %></td>

        <td>
          <% if can? :update, role %>
            <td><%= link_to 'Edit', edit_role_path(role) %></td>
          <% end %>
        </td>

        <td>
          <% if can? :destroy, role %>
            <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Role %>
  <%= link_to 'New Role', new_role_path %>
<% end %>